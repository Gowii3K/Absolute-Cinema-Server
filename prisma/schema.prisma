generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Venue{
  venueId Int @id @default(autoincrement())
  location String
  username String
  email String @unique
  createdAt DateTime @default(now())
  password String
  lat Float
  lng Float
  screens Screen[]
}

model Screen{
  screenId Int @id @default(autoincrement())
  venueId Int
  seats Int 
  show Show[]
  venue Venue @relation(fields: [venueId],references: [venueId])
}

model Show{

  showId Int @id @default(autoincrement())
  screenId Int
  date String
  time String
  bookings Booking[]
  screen Screen @relation(fields: [screenId],references: [screenId])
  @@unique([date,time,screenId])

  
}
model Booking{
  bookingId Int @id @default(autoincrement())
  showId Int
  seatNo Int
  show Show @relation(fields: [showId],references: [showId])
  @@unique([showId,seatNo])
}


