generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Venue{
  venueId Int @id @default(autoincrement())
  firstName String
  lastName String
  email String @unique
  createdAt DateTime @default(now())
  password String
  screens Screen[]
}

model Screen{
  screenId Int @id @default(autoincrement())
  venueId Int 
  openingTime Int
  closingTime Int
  bookings Booking[]
  venue Venue @relation(fields: [venueId],references: [venueId])
  
}
model Booking{
  bookingId Int @id @default(autoincrement())
  screenId Int
  date String
  slot Int
  screen Screen @relation(fields: [screenId],references: [screenId])
  @@unique([date,slot])
}


